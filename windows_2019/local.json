{
  "variables": {
    "home": "{{ env `HOME` }}"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "vm_name": "{{ user `vm_name` }}-{{ isotime `20060102.1504` }}",
      "iso_url": "{{ user `home` }}/{{ user `iso_location` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "headless": false,
      "guest_os_type": "{{ user `vcenter_os_guest_type` }}",
      "version": "{{ user `vm_hardware_version` }}",
      "cpus": 2,
      "cores": 1,
      "memory": 2048,
      "disk_size": "{{ user `disk_size` }}",
      "disk_type_id": "{{ user `disk_type_id` }}",
      "vmx_data": {
        "scsi0.virtualDev": "lsisas1068"
      },
      "network": "{{ user `network` }}",
      "network_adapter_type": "{{ user `network_adapter_type` }}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "tools_upload_flavor": "windows",
      "floppy_files": [
        "{{user `auto_unattend`}}"
      ],
      "vnc_port_min": 5900,
      "vnc_port_max": 5980,
      "communicator": "winrm",
      "winrm_username": "{{ user `winrm_username` }}",
      "winrm_password": "{{ user `winrm_password` }}",
      "winrm_timeout": "60m",
      "winrm_use_ssl": true,
      "winrm_insecure": true
    }
  ],
  "post-processors": [
    {
      "name": "vagrant",
      "type": "vagrant",
      "output": "{{ .BuildName }}_{{ .Provider }}.box"
    }
  ]
}
